body {
  padding-top: 20px;
}
.comida, header{
  background-color: #f2f2f2;
  border: 1px solid #ccc;
  float: left;
  padding: 20px;
  width: 200px;
  margin: 10px;
  border-radius: 10px;
  text-align: center;
  -webkit-box-shadow: 0 2px 2px 1px rgba(0,0,0,0.2);
  box-shadow: 0 2px 2px 1px rgba(0,0,0,0.2);
}
h1,
p {
  border-radius: 10px;
  padding: 10px;
}
.centerBlock{
  width: 660px;
  margin: 10px auto;
}

.heart{
  font-size 30px
  cursor pointer
  color gray
}

input[type=checkbox] {
  -webkit-appearance: none;
  -moz-appareance: none;
  border: none;
  outline: none;
}
input[type=checkbox]:focus {
  outline: 0;
}
input[type=checkbox]:checked {
  color: red;
}
input[type='text']{
  margin-bottom 10px;
}

.glyphicon {
  font-size: 30px;
  cursor: pointer;
  color: #808080;
}
.red {
  color: #f00;
}
.gray {
  color: #808080;
}
